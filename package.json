{
  "name": "@kamona/edge-cli",
  "version": "0.0.2",
  "description": "CLI tool for edge-js/edge",
  "main": "dist/cli.js",
  "bin": {
    "edge": "dist/cli.js"
  },
  "engines": {
    "node": ">=10"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "cli": "ts-node src/cli.ts",
    "dev": "node scripts/build -w",
    "build": "node scripts/build",
    "format": "prettier --write src test",
    "test": "jest",
    "prepare": "husky install",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write"
    ],
    "test/**/*.ts": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kamona-WD/edge-cli.git"
  },
  "keywords": [
    "edge.js",
    "cli",
    "templeting language"
  ],
  "author": {
    "name": "Ahmed Kamel",
    "email": "ak3849909@gmail.com",
    "url": "https://github.com/Kamona-WD"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Kamona-WD/edge-cli/issues"
  },
  "homepage": "https://github.com/Kamona-WD/edge-cli#readme",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.13",
    "@types/normalize-path": "^3.0.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.12.18",
    "execa": "^5.1.1",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "read-pkg": "5.2.0",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.5.2",
    "cosmiconfig": "^7.0.0",
    "edge.js": "^5.3.1",
    "fast-glob": "^3.2.7",
    "lodash": "^4.17.21",
    "make-dir": "^3.1.0",
    "meow": "7.1.1",
    "merge-options": "^3.0.4",
    "normalize-path": "^3.0.0"
  }
}
